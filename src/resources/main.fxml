<?import javafx.scene.text.Font?>

<BorderPane fx:controller="Controllers.MainController" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
   <top>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="title" layoutX="189.0" layoutY="21.0" text="iFacebook" textAlignment="CENTER" textFill="#0062f5">
               <font>
                  <Font name="Kalimati" size="96.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </top>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="uname" layoutX="362.0" layoutY="14.0" promptText="Username" />
            <TextField fx:id="password" layoutX="360.0" layoutY="65.0" promptText="Password" />
            <Label layoutX="268.0" layoutY="19.0" text="Username:" />
            <Label layoutX="269.0" layoutY="70.0" text="Password:" />
            <Button fx:id="login" onAction="#login" layoutX="262.0" layoutY="114.0" mnemonicParsing="false"  text="Login" />
            <Button fx:id="register"  onAction="#openRegFXML" layoutX="331.0" layoutY="114.0" mnemonicParsing="false" text="Register" />
            <Button fx:id="reset" onAction="#openResetOneFXML" layoutX="417.0" layoutY="114.0" mnemonicParsing="false" text="Reset Password" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
